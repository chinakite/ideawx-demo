<?xml version="1.0" encoding="UTF-8"?>
<web-app>   
  
    <display-name>IdeaWxDemo</display-name>
    
    <filter>  
        <filter-name>wxOauthFilter</filter-name>  
        <filter-class>com.ideamoment.wx.webauth.filter.WxOauthFilter</filter-class>  
        <init-param>  
            <param-name>accessableChecker</param-name>  
            <param-value>com.ideamoment.wanr.wx.filter.OauthEventListener</param-value>  
        </init-param>
        <init-param>  
            <param-name>scope</param-name>  
            <param-value>base</param-value>  
        </init-param>
    </filter>  
    <filter-mapping>  
        <filter-name>wxOauthFilter</filter-name>  
        <url-pattern>/wx/*</url-pattern>  
    </filter-mapping>
    
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.html</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.css</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.js</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.jpg</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.gif</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.png</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.WD3</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.eot</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.ttf</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.woff</url-pattern> 
    </servlet-mapping>
    <servlet-mapping> 
        <servlet-name>default</servlet-name> 
        <url-pattern>*.eot@</url-pattern> 
    </servlet-mapping>
    
    <servlet> 
        <servlet-name>wxServlet</servlet-name> 
        <servlet-class>com.ideamoment.wx.event.IdeaWxEventServlet</servlet-class>
        <load-on-startup>1</load-on-startup> 
    </servlet>
    
    <servlet-mapping> 
        <servlet-name>wxServlet</servlet-name> 
        <url-pattern>/wxevent</url-pattern> 
    </servlet-mapping>
    
    <servlet> 
        <servlet-name>wxOauthServlet</servlet-name> 
        <servlet-class>com.ideamoment.wx.event.IdeaWxEventServlet</servlet-class>
        
        <init-param>  
            <param-name>eventListener</param-name>  
            <param-value>com.ideamoment.wanr.ideawxdemo.filter.OauthEventListener</param-value>  
        </init-param>
        
        <load-on-startup>2</load-on-startup> 
    </servlet>
    
    <mime-mapping>
        <extension>png</extension>
        <mime-type>image/png</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>application/octet-stream</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>eot</extension>
        <mime-type>application/octet-stream</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>ttf</extension>
        <mime-type>application/octet-stream</mime-type>
    </mime-mapping>
    
    <welcome-file-list>   
        <welcome-file>/index.jsp</welcome-file>   
    </welcome-file-list>
    
</web-app>